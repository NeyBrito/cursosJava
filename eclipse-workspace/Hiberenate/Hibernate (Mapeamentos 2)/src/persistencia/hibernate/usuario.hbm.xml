<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="modelo.Usuario" table="usuarios">
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="nome" column="primeiro_nome" />
		<property name="sobrenome" column="ultimo_nome" />
		<set name="listaDeTarefas" table="UsuariosTarefas">
			<key column="usr_id" />
			<many-to-many column="tarefa_id" unique="true" class="modelo.Tarefa" />
		</set>
	</class>
</hibernate-mapping>